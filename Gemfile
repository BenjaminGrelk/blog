  gem "jekyll-sitemap"
  gem "jekyll-archives"
  gem "jekyll-paginate"
  gem "jekyll-paginate-v2"
  gem "jekyll-scholar"
  gem "jekyll-toc"
  gem "jekyll-include-cache"
end
